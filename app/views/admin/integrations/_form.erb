<%= @debug.inspect if @debug %>
<%= form_with model: [:admin, @integration], local: true do |form| %>
  <% if @integration.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@integration.errors.count, "error") %> prohibited
        this integration from being saved:
      </h2>
      <ul>
        <% @integration.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :links %> (1 link per line)<br>
    <%= form.text_area :links %>
  </p>

  <p>
    <%= form.label :tags %><br>
	<%= render '/admin/tags/tag_list', :integration => @integration, :form => form %> 
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
